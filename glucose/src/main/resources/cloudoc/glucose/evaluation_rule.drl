package cloudoc.glucose;

no-loop

//小于3.9
rule "value <= 3.9"
    ruleflow-group "evaluation"
    // lock-on-active true
    dialect "mvel"
	when
		$r : Record( value <= 3.9 )
	then
		$r.level = 0;
// 		}
end

//3.9~4.4
rule "3.9 < value <= 4.4"
    ruleflow-group "evaluation"
    dialect "mvel"
    // lock-on-active true
	when
		$r : Record( value <= 4.4 , value > 3.9 )
	then
// 		modify($r) {
		    $r.level = 1;
// 		}
end

