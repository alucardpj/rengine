package cloudoc.glucose;

//only diabetes
rule "only diabetes"
    ruleflow-group "determination"
    no-loop
    
    when
        $p : Patient( isDiabetes == true )
        $s : Statistic()
        not( exists( Record() ) )
    then
        Conclusion c = new Conclusion();
        c.setTitle("周评");
        c.setDetail("建议您平时饮食中可以适量加入玉米、燕麦等粗纤维食物，可以有效降低生糖指数。多吃芹菜、西兰花、菜花、卷心菜、香菇等蔬菜。少吃高糖水果，如香蕉、葡萄、菠萝、大枣、山楂、桂圆、荔枝、柿子、香瓜等。少喝或不喝粥。一周最好3-4次运动锻炼，每次控制在30-40分钟左右，运动方式可以根据自己的喜好，选择慢跑、太极拳、游泳等。空腹血糖尽量控制在4.4-7.0mmol/l，餐后血糖控制在4.4-10.0mmol/l这个水平。");
        modify($s) {
            addConclusionArray(c);
        }
end

