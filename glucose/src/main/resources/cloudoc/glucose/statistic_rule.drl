//average FBG
rule "average FBG"
    ruleflow-group "statistic"
    salience 10
    
    when
        $s : Statistic( averageFBGUpdated == false )
        accumulate( Record( acktype in (0, 2, 4), $value : value ),
                    $avg : average( $value ) )
    then
        modify($s) {
            setAverageFBG($avg.doubleValue()),
            setAverageFBGUpdated(true);
        }
end

//fbg variance
rule "fbg variance"
    ruleflow-group "statistic"
    
