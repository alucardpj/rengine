package cloudoc.glucose;

//fbg count
rule "fbg count"
    ruleflow-group "statistic"
    salience 10

	when
	    $s : Statistic( fbgCountUpdated == false )
		Number( $count : intValue )
		    from accumulate( Record( acktype in (0, 2, 4) ), count() )
	then
	    modify($s) {
	        setFbgCount( $count ),
	        setFbgCountUpdated(true);
	    }
end

