package cloudoc.glucose;

//fbg count
rule "fbg count test"
    ruleflow-group "statistictest"
    salience 10

	when
	    $s : Statistictest()
		Number( $count : intValue )
		    from accumulate( Record( acktype in (0, 2, 4) ), count() )
	then
        $s.setFbgCount( $count );
end

