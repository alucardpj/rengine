//hypoglycemia count
rule "hypoglycemia count test"
    ruleflow-group "statistictest"
    
    when
        $s : Statistictest()
        Number( $count : intValue )
            from accumulate( Record( value <= 3.9 ), count() )
    then
        $s.setHypoglycemiaCount( $count );
end

