rule "fbg normal count test"
    ruleflow-group "statistictest"

    when
        $s : Statistictest( )
		Number( $count : intValue )
		    from accumulate( Record( acktype in (0, 2, 4), level == 2 ), count() )
    then
        $s.setFbgNormalCount( $count );
end

